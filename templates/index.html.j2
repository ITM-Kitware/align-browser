<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Align Browser</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Align Browser</h1>
    </header>
    <main>
        <aside class="controls">
            <h2>Parameters</h2>
            <div id="scenario-selection">
                <h3>Scenario Set</h3>
                <select id="base-scenario-select"></select>
                <h4 style="margin-top: 15px;">Specific Scenario</h4>
                <select id="scenario-select"></select>
            </div> 
            <div id="adm-type-selection"></div>
            <div id="kdma-sliders"></div>
            <div id="llm-selection"></div>
            <div id="scores-timing-section"></div>
            <div id="comparison-controls" style="margin-top: 20px; padding-top: 15px; border-top: 1px solid #ddd;">
                <h3>Compare Runs</h3>
                <span id="pinned-count" style="color: #666;">
                    Pinned: <span class="count">0</span>
                </span>
                <button id="clear-all-pins" class="btn btn-danger" disabled style="margin-left: 10px;">Clear All</button>
            </div>
        </aside>
        <section class="run">
            <div class="run-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                <h2 style="margin: 0;">Results</h2>
                <button id="pin-current-run" class="btn btn-primary" disabled>
                    ðŸ“Œ Pin Current Configuration
                </button>
            </div>
            <div id="runs-container" class="runs-container">
                <div id="current-run-wrapper" class="run-wrapper current-run-wrapper">
                    <div class="run-content-header">
                        <span class="run-title">Current Run</span>
                        <span class="live-badge">Live</span>
                    </div>
                    <div id="run-display" class="run-content"></div>
                </div>
            </div>
            <div id="comparison-display" style="display: none;"></div>
        </section>
    </main>
    <script src="/js/app.js"></script>
</body>
</html>
